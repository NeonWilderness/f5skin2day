//- partial template: Menu --> Basic Options
form(ng-controller="MenuBasicOptionsCtrl as menuBasic")
    .row.bottom15
        .small-3.columns
            label(for="txtMenuTitle") Men√ºtitel
                input(type="text", id="txtMenuTitle", ng-model="customize.param.topbar.title", placeholder="Text")
        .small-3.columns.text-center
            label Iconfarbe
            spectrum-colorpicker(ng-model="customize.param.topbar.menuIconColor")
        .small-6.columns
            label Vorschau
            top-bar#menuPreview
                ul.title-area
                    li.name: h1(ng-hide="customize.param.topbar.title.length===0"): a(href="#") {{customize.param.topbar.title}}
                top-bar-section
                    ul.left
                        li
                            a(href="#") <i class="fa {{customize.param.topbar.menuItems.twoday.icon}}"></i>{{customize.param.topbar.menuItems.twoday.text}}
    .row
        .small-4.columns.text-center
            label Fixed
            .switch.round
                input(type="checkbox", id="chkFixed", ng-model="customize.param.topbar.class.fixed")
                label(for="chkFixed")
        .small-4.columns.text-center
            label ContainToGrid
            .switch.round.text-center
                input(type="checkbox", id="chkContainToGrid", ng-model="customize.param.topbar.class.containToGrid")
                label(for="chkContainToGrid")
        .small-4.columns.text-center
            label Sticky
            .switch.round
                input(type="checkbox", id="chkSticky", ng-model="customize.param.topbar.class.sticky")
                label(for="chkSticky")