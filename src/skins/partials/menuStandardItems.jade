//- partial template: Menu --> Standard Items
form(ng-controller="MenuStandardItemsCtrl as menuStandard")
    .row.collapse
        .small-12.columns
            table#standardItems
                thead
                    tr
                        th Men√ºeintrag
                        th Text
                        th Icon
                            a.extlink(href="http://fortawesome.github.io/Font-Awesome/cheatsheet/", target="_blank", title="Font Awesome Icons anzeigen")
                        th Trenner
                tbody
                    tr(ng-repeat="(menuitem, pref) in customize.param.topbar.menuItems")
                        td: em {{menuitem}}
                        td: input(type="text", ng-model="pref.text")
                        td
                            .row.collapse
                                .small-10.columns
                                    input(type="text", ng-model="pref.icon")
                                .small-2.columns
                                    span.postfix:  i(ng-class="menuStandard.getMenuIcon(menuitem)")
                        td
                            .switch.round
                                input(type="checkbox", ng-model="pref.divider", id="chk{{menuitem}}")
                                label(for="chk{{menuitem}}")