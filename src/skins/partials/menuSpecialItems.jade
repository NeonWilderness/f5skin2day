//- partial template: Menu --> Special Items
form(ng-controller="MenuSpecialItemsCtrl as menuSpecial")
    .row.collapse(ng-hide="menuSpecial.isEditMode || menuSpecial.isCreateMode")
        .small-12.columns
            table#specialItems
                thead
                    tr
                        th &nbsp;
                        th Menüicon
                        th.text-center Aktiviert?
                        th Vorschau
                        th Tooltip / Adresse
                        th Sortieren
                tbody
                    tr(ng-repeat="icon in menuSpecial.sortedIcons")
                        td: ul.button-group.twinbuttons
                            li: button.tiny.radius.secondary.square.right5(href="", title="Eintrag bearbeiten", ng-click="menuSpecial.edit($index)"): i.fa.fa-edit.fa-fw
                            li: button.tiny.radius.secondary.square(href="", title="Eintrag entfernen", ng-click="menuSpecial.remove($index)", ng-if="icon.delete"): i.fa.fa-trash-o.fa-fw
                        td
                            em {{icon.key}}
                        td.text-center
                            .switch.round
                                input(type="checkbox", ng-model="icon.activate", id="act{{icon.key}}")
                                label(for="act{{icon.key}}")
                        td
                            top-bar: top-bar-section: ul.left
                                li: a(href="", title="icon.title") <i class="fa {{icon.icon}}"></i> {{icon.text}}
                                li.divider(ng-show="icon.divider")
                        td
                            .specialtitle {{icon.title}}
                            .specialhref {{icon.href}}
                        td: ul.button-group.twinbuttons
                            li: button.tiny.radius.secondary.square.right5(href="", title="Nach oben", ng-click="menuSpecial.moveup($index)", ng-disabled="$index===0"): i.fa.fa-caret-up.fa-fw
                            li: button.tiny.radius.secondary.square(href="", title="Nach unten", ng-click="menuSpecial.movedown($index)", ng-disabled="$index===menuSpecial.sortedIcons.length-1"): i.fa.fa-caret-down.fa-fw
                    tr: td(colspan="6")
                        button.tiny.radius.secondary(href="", ng-click="menuSpecial.create()")
                            i.fa.fa-plus.fa-margin
                            | Neues Menüicon hinzufügen
    .row.collapse(ng-show="menuSpecial.isEditMode || menuSpecial.isCreateMode")
        .small-12.columns
            table.fullsize.headerEditArea: thead: tr: th
                span(ng-if="menuSpecial.isEditMode") Menüicon&ensp;<span class="blue">{{menuSpecial.icon.key}}</span>&ensp;bearbeiten
                span(ng-if="menuSpecial.isCreateMode") Neues Menüicon hinzufügen
            .row
                .small-2.columns
                    label &nbsp;
                    ul.button-group.twinbuttons
                        li: button.tiny.radius.secondary.square.right5(href="", title="Speichern", ng-click="menuSpecial.save()"): i.fa.fa-check.fa-fw
                        li: button.tiny.radius.secondary.square(href="", title="Abbrechen", ng-click="menuSpecial.cancel()"): i.fa.fa-times.fa-fw
                .small-10.columns
                    .row
                        .small-6.columns
                            label Iconbezeichnung
                                input(type="text", ng-model="menuSpecial.icon.key", ng-disabled="menuSpecial.isKeyLocked()")
                        .small-3.columns.text-center
                            label Aktiviert?
                            .switch.round
                                input(type="checkbox", ng-model="menuSpecial.icon.activate", id="ac{{menuSpecial.icon.key}}")
                                label(for="ac{{menuSpecial.icon.key}}")
                        .small-3.columns.text-center
                            label Trenner?
                            .switch.round
                                input(type="checkbox", ng-model="menuSpecial.icon.divider", id="dv{{menuSpecial.icon.key}}")
                                label(for="dv{{menuSpecial.icon.key}}")
                    .row
                        .small-6.columns
                            label Text
                                input(type="text", ng-model="menuSpecial.icon.text")
                        .small-6.columns
                            label Tooltip
                                input(type="text", ng-model="menuSpecial.icon.title")
                    .row
                        .small-12.columns
                            label(ng-if="menuSpecial.icon.key==='mail'") E-Mail-Adresse (wird verschlüsselt gespeichert)
                                input(type="email", ng-model="menuSpecial.icon.href")
                            label(ng-if="menuSpecial.icon.key!=='mail' && !menuSpecial.isUrlLocked()") URL
                                input(type="url", ng-model="menuSpecial.icon.href")
                    .row
                        .small-12.columns
                            .row.collapse
                                label Font Awesome Iconname/n
                                    a.extlink(href="http://fortawesome.github.io/Font-Awesome/cheatsheet/", target="_blank", title="Font Awesome Icons anzeigen")
                                .small-10.columns
                                    input(type="text", ng-model="menuSpecial.icon.icon")
                                .small-2.columns
                                    span.postfix:  i(ng-class="menuSpecial.getMenuIcon(menuSpecial.icon.icon)")
                    .row
                        .small-6.columns
                            label Vorschau
                            top-bar: top-bar-section: ul.left
                                li: a(href="", title="{{menuSpecial.icon.title}}", ng-class="menuSpecial.getPreviewClass()", ng-show="menuSpecial.icon.activate")
                                    <i class="fa {{menuSpecial.icon.icon}}"></i>
                                    | {{menuSpecial.icon.text}}
                                li.divider(ng-show="menuSpecial.icon.divider && menuSpecial.icon.activate")
                        .small-3.columns.text-center
                            label Iconfarbe
                            spectrum-colorpicker(ng-model="menuSpecial.icon.color")
                        .small-3.columns.text-center
                            label Hover
                            spectrum-colorpicker(ng-model="menuSpecial.icon.hover")