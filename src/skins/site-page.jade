doctype html
include partials/vars.jade
html.no-js(lang="de-DE", ng-app="f5SkinApp", ng-controller="F5SkinCtrl")
    head
        meta(charset="UTF-8")
        title <% site.title %> <% site.tagline %>
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="description", content="{{param.site.description}}")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="author", content="{{param.site.author}}")
        | #{lineBreak}
        | <% site.metaRobots %>
        | <% site.metaAlternate %>
        include partials/metasocial.jade
        include partials/metaapple.jade
        link(rel="shortcut icon", href!='<% image name="favicon" fallback="/favicon" class="icon" as="url" %>')
        link(rel="stylesheet", href!="<% site.url %>main.css")
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        script(src="http://static.twoday.net/cdn/files/modernizr-custom-min-js.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
        script(src="#{jsFolder}/f5skin2day/head.js")
        | <% site.skin name="skinStyles" %><% site.skin name="coreInfo" %>

    body(ng-class="[param.format.body.class]", ng-style="param.format.body.style")
        #loader-wrapper: #loader(ng-cloak, ng-if="param.site.loader.animation")
        #f5wrap.off-canvas-wrap(data-offcanvas)
            .inner-wrap
                include partials/toolbar
                #header(ng-cloak, ng-class="[param.format.header.class]", ng-style="param.format.header.style")
                    h1(ng-class="[param.format.title.class]", ng-style="param.format.title.style") {{param.site.title}}{{param.format.header.titledelimiter}}
                        small(ng-class="[param.format.subtitle.class]", ng-style="param.format.subtitle.style") {{param.site.subtitle}}
                #f5container.container(ng-cloak)
                    .row
                        div(id="{{param.leftColumn.id}}", ng-hide="!param.leftColumn.activate", ng-class="param.leftColumn.class", ng-style="param.leftColumn.style")
                        div(id="{{param.middleColumn.id}}", ng-hide="!param.middleColumn.activate", ng-class="param.middleColumn.class", ng-style="param.middleColumn.style")
                            | <% response.message prefix="<alert ng-hide='msgClose' class='message radius' close='msgClose=true'>" suffix="</alert>" %>
                            | <% response.body %>
                        div(id="{{param.rightColumn.id}}", ng-hide="!param.rightColumn.activate", ng-class="param.rightColumn.class", ng-style="param.rightColumn.style")
                            | <% site.sidebar01 %><% site.sidebar02 %>
                a.exit-off-canvas(href="#")
        | #{lineBreak}
        | <% site.skin name="stdPreferences" %><% site.skin name="usrPreferences" %>
        | <% site.skin name="genMenuItems" %>
        | <% site.skin name="ngTemplates" %>
        script(src="#{jsFolder}/f5skin2day/app.js")