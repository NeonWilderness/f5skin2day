doctype html
include partials/vars.jade
html.no-js(lang="de-DE", ng-app="f5Twoday", ng-Controller="f5TwodayCtrl")
    head
        meta(charset="UTF-8")
        title {{site.title}}
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="description", content="{{site.description}}")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="author", content="{{site.author}}")
        | #{lineBreak}
        | <% site.metaRobots %>
        | <% site.metaAlternate %>
        include partials/metasocial.jade
        include partials/metaapple.jade
        link(rel="shortcut icon", href!='<% image name="favicon" fallback="/favicon" class="icon" as="url" %>')
        link(rel="stylesheet", href!="<% site.url %>main.css")
        script(src!="<% staticURL %>cdn/files/f5head-#{headVersion}.js")

    body(ng-class="format.body.class")
        #preloadWrapper: #preloadAnimation
        #f5wrap.off-canvas-wrap(data-offcanvas)
            .inner-wrap
                include partials/toolbar
                #header
                    h1
                        <% site.title %>
                        span <% site.tagline %>
                #foundation5.container
                    .row
                        #content.large-9.medium-8.small-12.columns
                            | <% response.message prefix="<div class='message alert-box radius' data-alert>" suffix="<a href='#' class='close'>&times;</a></div>" %>
                            | <% response.body %>
                        #sidebar.large-3.medium-offset-0.medium-4.small-offset-2.small-8.end.columns
                            | <% site.sidebar01 %><% site.sidebar02 %>
                a.exit-off-canvas(href="#")
        | #{lineBreak}
        | <% site.skin name="commentIcon_min" %>
        | <% modToolbarDropdowns %>
        | <% site.skin name="statcounter_min" %>
        | <% site.skin name="cdnSettings" %>
    script(src!="<% staticURL %>cdn/files/f5app-#{appVersion}.js")
    script#cdnTwoday(src!='<% site.skin name="googleDrive" %>js/cdnconnect.min.js')