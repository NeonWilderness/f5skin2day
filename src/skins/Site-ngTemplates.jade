//- Holds ng-templates to be used with templateUrl
script#customizeBlogHtml(type="text/ng-template")
    #customizeBlog
        h5 Mein Foundation-Blog anpassen
        p Die Einstelloptionen zu Ihrem Blog erreichen Sie über die unten angezeigten Tabs:
        tabset
            tab(heading="Grunddaten")
                include partials/tmplGrunddaten
            tab(heading="Hintergrundbilder")
                include partials/tmplHintergrundbilder
            tab(heading="Bloglayout")
                p Bloglayout
            tab(heading="Typographie")
                p Typographie
            tab(heading="Menüanzeige")
                p Menüsteuerung
            tab(heading="Aktualisierung")
                include partials/tmplAktualisierung
        p.text-center.bottom0
            a.button.success.radius.tiny(ng-click="ok()") <i class="fa fa-check fa-margin"></i>Einstellungen sichern
            a.button.alert.radius.tiny.left15(ng-click="cancel()") <i class="fa fa-times fa-margin"></i>Änderung abbrechen
        a.close-reveal-modal(ng-click="cancel()") &times;